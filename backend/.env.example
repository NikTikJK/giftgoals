# ---- Server ----
PORT=3001
NODE_ENV=development

# ---- Database (Neon PostgreSQL) ----
# Connection string from Neon dashboard (Connection string / Pooled).
DATABASE_URL="postgresql://USER:PASSWORD@HOST/DB?sslmode=require"

# ---- Auth ----
# Use a long random string in production (e.g. openssl rand -base64 32).
JWT_SECRET="change-me"

# ---- Google OAuth (optional) ----
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# ---- Frontend (CORS) ----
# In production set to the public URL of your frontend (e.g. https://your-app.onrender.com).
FRONTEND_URL=http://localhost:5173
